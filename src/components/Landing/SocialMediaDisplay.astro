---
interface Props {
  text: string
  url: string
}

const { text, url } = Astro.props
---

<a
  href={url}
  target="_blank"
  class="w-full flex flex-row items-center justify-start text-gray-200 hover:text-rose-400 gap-3 mb-3 last:mb-0"
>
  <div class="inline-block text-3xl align-middle -mt-1">
    <slot name="prefix" />
  </div>
  <span>{text}</span>
</a>
